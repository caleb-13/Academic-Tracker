<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mobile_Application_Development.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Mobile_Application_Development.ViewModels"
    Title="Reports">

    <ContentPage.BindingContext>
        <viewmodels:ReportsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="16" Spacing="14">
        <Label Text="Upcoming Assessments Report" FontSize="18" FontAttributes="Bold" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
            <VerticalStackLayout>
                <Label Text="From" />
                <DatePicker Date="{Binding FromDate}" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="To" />
                <DatePicker Date="{Binding ToDate}" />
            </VerticalStackLayout>
        </Grid>

        <Button Text="Generate CSV" Command="{Binding GenerateCommand}" />

        <Label Text="Last report file:" Opacity="0.7" />
        <Label Text="{Binding LastReportPath}" LineBreakMode="CharacterWrap" FontSize="12" />
    </VerticalStackLayout>
</ContentPage>
