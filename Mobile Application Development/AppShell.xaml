<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile_Application_Development.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile_Application_Development"
    xmlns:views="clr-namespace:Mobile_Application_Development.Views"
    Title="Mobile_Application_Development">

    <TabBar>
        <ShellContent
        Title="Terms"
        ContentTemplate="{DataTemplate views:TermsPage}"
        Route="TermsPage" />

        <ShellContent
        Title="Search"
        ContentTemplate="{DataTemplate views:SearchPage}"
        Route="SearchPage" />

        <ShellContent
        Title="Reports"
        ContentTemplate="{DataTemplate views:ReportsPage}"
        Route="ReportsPage" />
    </TabBar>

</Shell>
